<div class="card" style="width: 70%;">
    <div class="card-header d-flex justify-content-between align-items-center">
     <h5>{{image.title}}</h5>
     <button class="btn btn-danger btn-sm" id="btn-delete" data-id="{{image.uniqueId}}">
         <i class="fa fa-times"></i> Elminar
     </button>
    </div>
    <div class="card-body">
         <p>{{image.description}}</p>
         <div class="text-center">
             <img src="/public/upload/{{image.filename}}" class="img-fluid mt-2">
         </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center"> 
        <button class="btn btn-success btn-sm" id="btn-like" data-id="{{image.filname}}">
            <i class="fas fa-thumbs-up"></i> Me gusta
        </button>
        <p>
           <i class="fas fa-heart"></i> <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-eye"></i> {{image.views}}
            <i class="far fa-clock"></i> {{timeago image.timestamp}}
        </p>
    </div>
</div>
<div class="card mt-2" style="width: 70%";>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Comentario</h5>
        <button class="btn btn-info btn-sm" id="btn-toggle-comment">
            <i class="fa fa-comment"></i> Publica un comentario
        </button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/image/{{image.uniqueId}}/comment" method="POST">
            <div class="form-group">
                <input type="text" class="form-control form-control-sm" name="name" placeholder="Nombre">
            </div>
            <div class="form-group">
                <input type="text"  class="form-control form-control-sm" name="email" placeholder="Correo Electronico">
            </div>
            <div class="form-group">
                <textarea name="comment" rows="2" class="form-control form-control-sm" placeholder="Tu comentario"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-sm" id="comment"><i class="fa fa-comment"></i> Publicar</button>
            </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
           {{#each comments}}
             <div class="list-group-item">
                 <div class="row">
                     <a href="#" class="col text-center">
                         <img src="http://gravatar.com/avatar/{{gravata}}?d=monsterid&s=45" alt="">
                     </a>
                     <blockquote class="col">
                         <p class="lead">{{comment}}</p>
                         <footer class="blockquote-footer">
                             {{name}} -{{timeago timestamp}}
                         </footer>
                     </blockquote>
                 </div>
             </div>
           {{/each}}
        </ul>
    </div>
</div>