<div class="card" style="width: 70%;">
    <div class="card-header d-flex justify-content-between align-items-center">
     <h5>{{image.title}}</h5>
     <button class="btn btn-danger btn-sm" id="btn-delete" data-id="{{image.uniqueId}}">
         <i class="fa fa-times"></i> Elminar
     </button>
    </div>
    <div class="card-body">
         <p>{{image.description}}</p>
         <div class="text-center">
             <img src="/public/upload/{{image.filename}}" class="img-fluid mt-2">
         </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center"> 
        <button class="btn btn-success btn-sm" id="btn-like" data-id="{{image.filname}}">
            <i class="fas fa-thumbs-up"></i> Me gusta
        </button>
        <p>
           <i class="fas fa-heart"></i> <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-eye"></i> {{image.views}}
            <i class="far fa-clock"></i> {{timeago image.timestamp}}
        </p>
    </div>

</div>