<div class="container p-4 mt-5">
    <div class="row">
        {{#each template}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">{{timeago create_at}}</p>
                    <a href="/template/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/template/edit/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p class="text-danger font-weight-bold">NO hay template guardados aun</p>
                 <a href="/template/add" class="btn btn-success">Crear Uno</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="container p-4 mt-5">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/template/add" method="POST">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" placeholder="titulo" name="title" autofocus>
                    </div>
                    <div class="form-group mb-3">
                        <input type="url" name="url" placeholder="URL" class="form-control">
                    </div>
                     <div class="form-group mb-3">
                         <textarea name="description" placeholder="Descripcion" rows="2" class="form-control"></textarea>
                     </div>
                     <div class="form-group">
                         <button class="btn btn-primary btn-block">
                           Guardar
                         </button>
                     </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>