<section class="hero" id="home">
    <div class="container h100">
        <div class="content-hero content-100">
            <div class="col-sm-6">
                <h1 class="title-hero site-headline font-weight-bold mb-3">Es hora de ser el #1 ☝️</h1>
                <p>¡Muestra tu mejor perfildev!
                    <span id="app" class="text-primary font-weight-bolder"></span>
                    </span>
                </p>
            </div>

            <div class="col-sm-6 p-3">
                <div class="row">
                    <div class="mx-auto">
                        <!-- Material form login -->
                        <div class="card bg-transparent">

                            <h3 class="card-header text-center py-3">
                                <strong>Iniciar sesión</strong>
                            </h3>

                            <!--Card content-->
                            <div class="card-body px-lg-4 pt-0">

                                <!-- Form -->
                                <form class="text-center" action="/signin" method="POST">
                                    <img src="../assets/img/perfildev-logo-dark.svg" alt="Logo perfildev"
                                        class="card-img-top mx-auto m-3 w-50">
                                    <!-- Email -->
                                    <div class="md-form">
                                        <div class="form-group text-left">
                                            <label><small><b>Email</b></small> </label>
                                            <input type="email" name="username" class="form-control">
                                        </div>
                                    </div>

                                    <!-- contraseña -->
                                    <div class="md-form">
                                        <div class="form-group text-left">
                                            <label><small><b>Contraseña</b></small></label>
                                            <input type="password" name="password" class="form-control">
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-around">
                                        <div>
                                            <!-- recuerdame -->
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input"
                                                    id="materialLoginFormRemember">
                                                <label class="form-check-label small font-weight-bold"
                                                    for="materialLoginFormRemember">Recordar</label>
                                            </div>
                                        </div>
                                        <div>
                                            <!-- Forgot password -->
                                            <a class="small font-weight-bold" href="/">¿olvidaste tu contraseña?</a>
                                        </div>
                                    </div>

                                    <!-- Sign in button -->
                                    <button
                                        class="btn btn-primary btn-rounded btn-block my-4 waves-effect z-depth-0 font-weight-bold"
                                        type="submit">Iniciar 🚀</button>

                                    <!-- Register -->
                                    <p class="small font-weight-bold">¿No estas registrado?
                                        <a href="/signup">Registrate</a>
                                    </p>
                            </div>
                            </form>
                            <!-- Form -->

                        </div>

                    </div>
                    <!-- Material form login -->
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</section>
